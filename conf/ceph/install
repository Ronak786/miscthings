config:
	touch /var/lib/apache2/module/enabled_by_maint/wsgi
	touch /var/lib/apache2/conf/enabled_by_maint/javascript-common

kernel use petasan's /proc/config.gz to export
	make xxxconfig O=
	make O= -j2
	then make bindeb-pkg -j2
	then install kernel

