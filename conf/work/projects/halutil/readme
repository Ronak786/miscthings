class HalUtil {
	static CameraInfo* openCamera();			// open camera
	static int closeCamera(CameraInfo *info);	// close camera

	static LteInfo* openLte();					// open lte
	static int closeLte(LteInfo *info);			// close lte

	// get wifiinfo list and return, static method
	static std::vector<WifiInfo>  getAvailWifiList(); //get a list for wifi info
};
